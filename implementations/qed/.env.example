# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Enable debug mode (verbose logging)
QED_SSG_DEBUG=false

# Log level: trace, debug, info, warn, error
QED_SSG_LOG_LEVEL=info

# =============================================================================
# ADAPTER SETTINGS
# =============================================================================

# Default timeout for adapter operations (milliseconds)
QED_SSG_TIMEOUT=30000

# Number of retry attempts for failed operations
QED_SSG_RETRY_COUNT=3

# Delay between retries (milliseconds)
QED_SSG_RETRY_DELAY=1000

# =============================================================================
# BUILD SETTINGS
# =============================================================================

# Default output directory for builds
QED_SSG_OUTPUT_DIR=dist

# Default source directory for content
QED_SSG_SOURCE_DIR=content

# Clean output directory before build
QED_SSG_CLEAN_BUILD=true

# =============================================================================
# DEVELOPMENT SERVER
# =============================================================================

# Default port for development server
QED_SSG_DEV_PORT=3000

# Host to bind development server
QED_SSG_DEV_HOST=127.0.0.1

# Auto-open browser on server start
QED_SSG_DEV_OPEN=false

# Enable file watching
QED_SSG_DEV_WATCH=true

# =============================================================================
# TESTING
# =============================================================================

# Minimum test coverage percentage
QED_SSG_TEST_COVERAGE=70

# Test timeout (milliseconds)
QED_SSG_TEST_TIMEOUT=60000

# Run tests in parallel
QED_SSG_TEST_PARALLEL=true

# =============================================================================
# SSG BINARY PATHS (override auto-detection)
# =============================================================================

# Uncomment and set paths if SSG binaries are not in PATH
# ZOLA_PATH=/usr/local/bin/zola
# COBALT_PATH=/usr/local/bin/cobalt
# MDBOOK_PATH=/usr/local/bin/mdbook
# HAKYLL_PATH=/usr/local/bin/site
# STACK_PATH=/usr/local/bin/stack
# MIX_PATH=/usr/local/bin/mix

# =============================================================================
# CI/CD SETTINGS
# =============================================================================

# GitHub token for API operations (optional)
# GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# Skip certain checks in CI
# CI_SKIP_E2E=false
# CI_SKIP_BENCHMARKS=false
