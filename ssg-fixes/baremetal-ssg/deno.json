{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@hyperpolymath/baremetal-ssg",
  "version": "1.0.0",
  "exports": "./main.js",
  "tasks": {
    "start": "deno run --allow-all main.js",
    "dev": "deno run --watch --allow-all main.js",
    "test": "deno test --allow-all tests/",
    "lint": "deno lint adapters/",
    "fmt": "deno fmt adapters/",
    "check": "deno check adapters/*.js"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["adapters/", "tests/", "*.js"]
  },
  "lint": {
    "include": ["adapters/", "tests/", "*.js"],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars", "no-explicit-any"],
      "exclude": ["no-explicit-any"]
    }
  },
  "test": {
    "include": ["tests/"]
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true
  }
}
