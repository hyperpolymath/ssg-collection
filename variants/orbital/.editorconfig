# EditorConfig for orbital-ssg
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.scm]
indent_size = 2

[*.adoc]
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4

[Containerfile]
indent_style = space
indent_size = 4

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2
