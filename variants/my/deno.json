{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "tasks": {
    "test": "deno test --allow-all tests/",
    "test:unit": "deno test --allow-all tests/unit/",
    "test:e2e": "deno test --allow-all tests/e2e/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.js",
    "coverage": "deno test --allow-all --coverage=.coverage tests/ && deno coverage .coverage --lcov > coverage.lcov"
  },
  "lint": {
    "include": ["adapters/", "tests/", "src/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "no-throw-literal"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["adapters/", "tests/", "src/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "test": {
    "include": ["tests/"]
  },
  "exclude": [
    "node_modules/",
    ".git/",
    ".coverage/",
    "*.res.js"
  ]
}
