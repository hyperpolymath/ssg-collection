# EditorConfig - https://editorconfig.org
# Hyperpolymath Standard Enforcement

root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# ReScript source files
[*.{res,resi}]
indent_size = 2

# JavaScript (compiled from ReScript or MCP glue)
[*.js]
indent_size = 2

# Nickel configuration
[*.ncl]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Just/Mustfile
[{justfile,Justfile,Mustfile.epx}]
indent_size = 4

# Configuration
[*.{json,yaml,yml,toml}]
indent_size = 2

# Documentation
[*.{md,adoc,txt}]
indent_size = 2
trim_trailing_whitespace = false

# Containerfile
[{Containerfile,Dockerfile}]
indent_size = 4

# ============================================================================
# BANNED FILE TYPES (enforcement via IDE)
# Configure your editor to warn on these file types
# ============================================================================
# TypeScript: *.ts, *.tsx (use ReScript instead)
# Go: *.go (use Rust instead)
# Python (non-Salt): *.py (use ReScript/Rust instead)
