# Pre-push hook for saur-ssg
# Install: cp hooks/pre-push .git/hooks/ && chmod +x .git/hooks/pre-push
# Or: just hooks-install

set -euo pipefail

echo "ğŸš€ Running pre-push checks..."

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# RUN TESTS
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo "  â†’ Running tests..."
if command -v deno &> /dev/null; then
    if [ -d "tests" ]; then
        if ! deno test --allow-read --allow-run tests/ 2>/dev/null; then
            echo "âŒ Tests failed. Fix tests before pushing."
            exit 1
        fi
        echo "  âœ“ Tests passed"
    else
        echo "  âš  No tests directory found"
    fi
else
    echo "  âš  Deno not installed, skipping tests"
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# VALIDATE ADAPTERS
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo "  â†’ Validating adapters..."
if command -v deno &> /dev/null; then
    failed=0
    for f in adapters/*.js; do
        name=$(basename "$f" .js)
        if ! deno eval "
            import * as a from './$f';
            if (!a.name) throw new Error('Missing: name');
            if (!a.language) throw new Error('Missing: language');
            if (!a.tools) throw new Error('Missing: tools');
        " 2>/dev/null; then
            echo "  âŒ $name failed validation"
            failed=1
        fi
    done
    if [ $failed -eq 1 ]; then
        echo "âŒ Some adapters failed validation"
        exit 1
    fi
    echo "  âœ“ All adapters valid"
else
    echo "  âš  Deno not installed, skipping adapter validation"
fi

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
# SCM FILES CHECK
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

echo "  â†’ Checking SCM files..."
required_scm=("META.scm" "STATE.scm" "ECOSYSTEM.scm")
for scm in "${required_scm[@]}"; do
    if [ ! -f "$scm" ]; then
        echo "  âŒ Missing: $scm"
        exit 1
    fi
done
echo "  âœ“ SCM files present"

echo ""
echo "âœ… All pre-push checks passed!"
